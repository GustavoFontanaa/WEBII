<div class="home-banner">
    <img src="img/banner.jpg" width="100%" height="auto">
</div>
<div class="home">  
  <div class='container' style="width: 90%; max-width: 1300px;">
    <h1 class="title-section">Acesse as provas</h1>
    {{#if tasks.length}}
      <div class="list-card-row">
        {{#each tasks}}
          <a href="/avaliacao/{{id}}" class="list-card-test">
            <div class="card-icon">
              <span class="material-symbols-outlined">quiz</span>
            </div>            
            <div class="card-text">
              <h1>{{nome}}</h1>
              <h5>Clique aqui e acesse!</h5>
            </div>
          </a>
        {{/each}}
      </div>
    {{else}}
        <p>Não há tarefas para exibir.</p>
    {{/if}}
  </div>
  <div class='container' style="width: 80%; max-width: 1200px;">
    <h1 class="title-section">Acompanhe o resultado das provas</h1>
    {{#if tasks.length}}
       <div class="list-card-col">
        {{#each tasks}}
          <a href="/results?={{id}}" class="list-card">
            <h1>{{nome}}</h1>
            <span class="material-symbols-outlined animation" style="font-size: 35px">arrow_forward_ios</span>
          </a>
        {{/each}}
      </div>
    {{else}}
        <p>Não há tarefas para exibir.</p>
    {{/if}}
  </div>
  <img class="barbie" src="img/barbie.png">
  <img class="bibble" src="img/bibble.png">
</div>

